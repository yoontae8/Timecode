<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation ="vertical"
    android:background="#f4f6ec" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/register" />

    </LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
         	
    <TextView
        android:id="@+id/stuId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/registerbar"
        android:layout_below="@+id/registerbar"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:text="Student Id"
        android:textColor="#67563e" />

    <EditText
        android:id="@+id/editStuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stuId"
        android:layout_below="@+id/stuId"
        android:layout_marginLeft="10sp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/stunum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editStuid"
        android:layout_below="@+id/editStuid"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Student number"
        android:textColor="#67563e" />

    <EditText
        android:id="@+id/editStunum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stunum"
        android:layout_below="@+id/stunum"
        android:layout_marginLeft="10sp"
        android:ems="10" />

    <TextView
        android:id="@+id/passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/stuId"
        android:layout_below="@+id/editStunum"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Password"
        android:textColor="#67563e" />

    <EditText
        android:id="@+id/editPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwd"
        android:layout_below="@+id/passwd"
        android:layout_marginLeft="10sp"
        android:ems="10" />

    <TextView
        android:id="@+id/phonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editPasswd"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="Phone number"
        android:textColor="#67563e" />

    <EditText
        android:id="@+id/editPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phonenum"
        android:layout_below="@+id/phonenum"
        android:layout_marginLeft="10sp"
        android:ems="10" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="8">

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp"
        android:layout_marginLeft="195sp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="110sp"
        android:background="#f7bfbd"
        android:text="Register"
        android:textColor="#67563e" />

	</LinearLayout>
</LinearLayout>